            <Grid Margin="0,27,0,48">
                <TextBox x:Name="minH_Play2_King" HorizontalAlignment="Left" Height="23" Margin="28,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="69"/>
                <TextBox x:Name="minS_Play2_King" HorizontalAlignment="Left" Height="23" Margin="120,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="69"/>
                <TextBox x:Name="minV_Play2_King" HorizontalAlignment="Left" Height="23" Margin="207,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="69"/>
                <Label Content="H" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" VerticalAlignment="Top" Width="18" RenderTransformOrigin="1.178,0.722"/>
                <Label Content="S" HorizontalAlignment="Left" Height="23" Margin="102,10,0,0" VerticalAlignment="Top" Width="18" RenderTransformOrigin="1.178,0.722"/>
                <Label Content="V" HorizontalAlignment="Left" Height="23" Margin="189,10,0,0" VerticalAlignment="Top" Width="18" RenderTransformOrigin="1.178,0.722"/>
            </Grid>
            <Grid Margin="0,71,0,10">
                <TextBox x:Name="maxH_Play2_King" HorizontalAlignment="Left" Height="23" Margin="28,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="69"/>
